<div class="w-full bg-indigo-500 bg-opacity-80 px-14 py-8  rounded border-l-4 border-indigo-300 shadow-lg">
    <form action="" method="POST" class=" grid grid-cols-2 gap-4">
        <div class=" px-8 ">
            <label for="" class="t_label">No Arsip *</label>
            <input type="text" name="No_Arsip" class="t_input" placeholder="No Arsip" value="<%=data.No_Arsip%>" required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Tanggal Input</label>
            <input type="date" name="Tanggal_Input" class="t_input" value="<%=data.Tanggal_Input%>" required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Pencipta Arsip</label>
            <input type="text" name="Author" class="t_input" placeholder="Pencipta Arsip" value="<%=data.Properties.Author%>" required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Kode Klasifikasi</label>
            <input type="text" name="Kode_Klasifikasi" class="t_input" placeholder="Kode Klasifikasi" value="<%=data.Kode_Klasifikasi%>" required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Unit Pengolah</label>
            <input type="text" name="Unit_Pengolah" class="t_input" placeholder="Unit Pengolah" value="<%=data.Unit_Pengolah%>" required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Bulan / Tahun</label>
            <div class="flex">
                <select name="Bulan" id="" class="t_input w-1/3">
                    <% 
                        var Bulan = ["Januari","Februari","Maret", "April", "Mei", "Juni", "Juli", "Agustus", "September", "Oktober", "November", "Desember"]
                        for (let i = 0; i < Bulan.length; i++) {
                                var selectedBulan = (data.Bulan == Bulan[i]) ? "selected" : "";
                                %><option value="<%= Bulan[i] %>" <%= selectedBulan %>><%= Bulan[i] %></option><%
                        }
                    %>
                </select>
                <input type="number" name="Tahun" class="t_input w-1/5 ml-5" placeholder="Tahun" value="<%=data.Properties.Tahun%>" required >
            </div>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Kelengkapan</label>
            <input type="text" name="Kelengkapan" class="t_input" placeholder="Kelengkapan" value="<%=data.Kelengkapan%>">
        </div>
        <div class="px-8">
            <label class="t_label" for="">Jenis Media</label>
            <input type="text" name="Media" class="t_input" placeholder="Media" value="<%=data.Media%>">
        </div>
        <div class="px-8">
            <label class="t_label" for="">Lokasi Arsip</label>
            <input type="text" name="Lokasi_Arsip" class="t_input" placeholder="Lokasi Arsip" value="<%=data.Lokasi_Arsip%>">
        </div>
        <div class="px-8">
            <label class="t_label" for="">Tingkat Perkembangan</label>
            <select name="Tingkat_Perkembangan" id="" class="t_input">
                <% 
                        var Tingkat = ["Asli", "Tembusan", "Fotocopy"]
                        for (let i = 0; i < Tingkat.length; i++) {
                                var selectedTingkat = (data.Tingkat_Perkembangan == Tingkat[i]) ? "selected" : "";
                                %><option value="<%= Tingkat[i] %>" <%= selectedTingkat %>><%= Tingkat[i] %></option><%
                        }
                    %>
                <option value="Asli">Asli</option>
                <option value="Tembusan">Tembusan</option>
                <option value="Fotocopy">Fotocopy</option>
            </select>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Nomor Boks</label>
            <input type="number" name="Nomor_Boks" class="t_input" placeholder="Nomor Boks" value="<%=data.Nomor_Boks %>">
        </div>
        <div class="px-8">
            <label class="t_label" for="">File</label>
            <input type="file" name="File" class="t_input" class="<%=data.File%>">
        </div>
        <div class="px-8 col-span-2">
            <label class="t_label" for="">Uraian</label>
            <textarea type="text" name="Uraian" class="t_input" style="min-height: 25vh;" placeholder="Uraian" ><%=data.Uraian%></textarea>
        </div>
        <input type="text" value="<%=data._id%>" class="hidden" name="id">
        <div class="col-span-2 flex items-center justify-center mt-4 gap-5">
            <a href="" class="w-36 py-2 text-center rounded-md bg-transparent border-2 border-indigo-200 hover:bg-indigo-800 hover:text-white font-bold text-indigo-200 ">Pinjam</a>
            <input type="submit" class="w-36 py-2 rounded-md bg-indigo-200 border-2 border-indigo-200 hover:bg-indigo-800 hover:text-white font-bold text-indigo-900" value="Perbarui">
        </div>
    </form>
</div>