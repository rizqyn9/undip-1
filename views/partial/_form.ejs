<div class="w-full bg-white bg-opacity-20 rounded-2xl px-14 py-8 mt-6">
    <form action="" method="POST" class=" grid grid-cols-2 gap-4">
        <div class=" px-8 ">
            <label for="" class="t_label">No Arsip *</label>
            <input type="text" name="No_Arsip" class="t_input" placeholder="No Arsip"  required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Tanggal Input</label>
            <input type="date" name="Tanggal_Input" class="t_input"  required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Pencipta Arsip</label>
            <input type="text" name="Author" class="t_input" placeholder="Pencipta Arsip"  required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Kode Klasifikasi</label>
            <input type="text" name="Kode_Klasifikasi" class="t_input" placeholder="Kode Klasifikasi"  required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Unit Pengolah</label>
            <input type="text" name="Unit_Pengolah" class="t_input" placeholder="Unit Pengolah"  required>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Bulan / Tahun</label>
            <div class="flex">
                <select name="Bulan" id="" class="t_input w-1/3">
                    <% 
                        var Bulan = ["Januari","Februari","Maret", "April", "Mei", "Juni", "Juli", "Agustus", "September", "Oktober", "November", "Desember"]
                        for (let i = 0; i < Bulan.length; i++) {
                                %><option value="<%= Bulan[i] %>" ><%= Bulan[i] %></option><%
                        }
                    %>
                </select>
                <input type="number" name="Tahun" class="t_input w-1/5 ml-5" placeholder="Tahun" required >
            </div>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Kelengkapan</label>
            <input type="text" name="Kelengkapan" class="t_input" placeholder="Kelengkapan" >
        </div>
        <div class="px-8">
            <label class="t_label" for="">Jenis Media</label>
            <input type="text" name="Media" class="t_input" placeholder="Media" >
        </div>
        <div class="px-8">
            <label class="t_label" for="">Lokasi Arsip</label>
            <input type="text" name="Lokasi_Arsip" class="t_input" placeholder="Lokasi Arsip" >
        </div>
        <div class="px-8">
            <label class="t_label" for="">Tingkat Perkembangan</label>
            <select name="Tingkat_Perkembangan" id="" class="t_input">
                <% 
                        var Tingkat = ["Asli", "Tembusan", "Fotocopy"]
                        for (let i = 0; i < Tingkat.length; i++) {
                                %><option value="<%= Tingkat[i] %>" ><%= Tingkat[i] %></option><%
                        }
                    %>
            </select>
        </div>
        <div class="px-8">
            <label class="t_label" for="">Nomor Boks</label>
            <input type="number" name="Nomor_Boks" class="t_input" placeholder="Nomor Boks" >
        </div>
        <div class="px-8">
            <label class="t_label" for="">File</label>
            <input type="file" name="File" class="t_input">
        </div>
        <div class="px-8 col-span-2">
            <label class="t_label" for="">Uraian</label>
            <textarea type="text" name="Uraian" class="t_input" style="min-height: 25vh;" placeholder="Uraian" ></textarea>
        </div>
        <div class="col-span-2 flex items-center justify-center mt-4">
            <input type="submit" class="w-36 h-10 rounded-md bg-indigo-200 border-2 border-indigo-600 hover:bg-indigo-800 hover:text-white font-bold text-indigo-900" value="Submit">
        </div>
    </form>
</div>